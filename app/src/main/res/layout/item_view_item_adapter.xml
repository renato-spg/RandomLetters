<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:elevation="4dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/img_item_view_item_adapter"
        app:layout_constraintTop_toTopOf="@id/img_item_view_item_adapter"
        app:layout_constraintEnd_toEndOf="@id/img_item_view_item_adapter"
        app:layout_constraintStart_toStartOf="@id/img_item_view_item_adapter"
        android:id="@+id/txtLetter_item_view_item_adapter"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="A" />

    <Button
        android:id="@+id/img_item_view_item_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>